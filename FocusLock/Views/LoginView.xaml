<UserControl x:Class="FocusLock.Controls.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Background="White"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border CornerRadius="12" Padding="40" Background="White">
                <StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center" >

                    <TextBlock Text="Welcome"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextIconBrush}"
                               Margin="0 0 0 30"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Username"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextIconBrush}"
                               Margin="0 0 0 5"/>
                    <TextBox x:Name="UsernameBox"
                             Height="35"
                             FontSize="14"
                             Margin="0 0 0 20"/>

                    <TextBlock Text="Password"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextIconBrush}"
                               Margin="0 0 0 5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="35"
                                 FontSize="14"
                                 Margin="0 0 0 30"/>

                    <Button Content="Login" 
                            Width="300" 
                            Margin="0,12,0,0" 
                            Click="Login_Click" 
                            Foreground="{DynamicResource TextIconBrush}" 
                            Background="#A8D8FF" 
                            BorderBrush="#89C7FF" 
                            BorderThickness="2" 
                            FontWeight="Bold"
                            FontSize="16" 
                            Padding="10,5"  
                            HorizontalAlignment="Center"  
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#89C7FF" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                                        To="#89C7FF" 
                                                        Duration="0:0:0.3">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                                        To="#A8D8FF" 
                                                        Duration="0:0:0.3">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                    <TextBlock HorizontalAlignment="Center"
                               Margin="0 25 0 0"
                               FontSize="13"
                               Foreground="{DynamicResource TextIconBrush}">
                        <Run Text="Don't have an account? " />
                        <Hyperlink Click="Register_Click">
                            <Run Text="Register"/>
                        </Hyperlink>
                    </TextBlock>

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>
